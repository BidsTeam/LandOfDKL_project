<fest:template xmlns:fest="http://fest.mail.ru">

    <div class="menu-container">
        <div class="menu-container__menu">
            <div class="menu-name">Login</div>
            <form class="menu__auth-form" id="auth-form" action="/api/auth/signin" method="POST" enctype="application/x-www-form-urlencoded">
                <div class="auth-form__form-group">
                    <label> Login <input type="text" name="login" id="auth-login-field"/> </label>
                    <label> Пароль <input type="password" name="password" id="auth-password-field"/> </label>
                    <div class="form-group__button-container">
                        <input type="submit" value="Войти" class="btn btn-large btn-success menu__button" disabled="disabled" />
                    </div>
                </div>
            </form>
            <div class="menu__button-container"> <a href="#" class="btn btn-large btn-primary menu__button"> Назад </a> </div>
        </div>
    </div>

</fest:template>
