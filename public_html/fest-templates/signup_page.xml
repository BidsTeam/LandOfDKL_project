<fest:template xmlns:fest="http://fest.mail.ru">

    <div data-role="page" id="signup-page">
        <div class="menu-container">
            <div class="menu-container__menu">

                <div class="menu__menu-name">Регистрация</div>

                <form id="signup-form" class="form-horizontal menu__form" action="/api/auth/signup" method="POST" enctype="application/x-www-form-urlencoded">
                    <div class="menu-form__fields-container">
                        <label for="signup-username-field" class="menu-form__field-name"> Логин </label>
                        <div class="form-group menu-form__form-group">
                            <input type="text" name="username" class="form-control menu-form__field" id="signup-username-field" />
                        </div>

                        <label for="signup-email-field" class="menu-form__field-name"> E-mail </label>
                        <div class="form-group form__form-group">
                            <input type="text" name="email" class="form-control menu-form__field" id="signup-email-field" />
                        </div>

                        <label for="signup-password-field" class="menu-form__field-name"> Пароль </label>
                        <div class="form-group form__form-group">
                            <input type="password" name="password" class="form-control menu-form__field" id="signup-password-field" />
                        </div>

                        <label for="signup-password-repeat-field" class="menu-form__field-name">Повторите пароль </label>
                        <div class="form-group form__form-group">
                            <input type="password" name="repeat_password" class="form-control menu-form__field" id="signup-password-repeat-field" />
                        </div>

                    </div>

                    <div class="menu__button-container">
                        <input type="submit" value="Зарегистрироваться" class="menu__button menu__button_ok" disabled="disabled"/>
                    </div>

                    <div class="menu__button-container">
                        <a href="#" class="menu__button menu__button_cancel"> Назад </a>
                    </div>

                </form>

            </div>
        </div>
    </div>

</fest:template>