<fest:template xmlns:fest="http://fest.mail.ru" context_name="obj">

    <div class="deck-builder">
        <div class="deck">
            <fest:each iterate="obj.deck" index="i" value="v">
                <div class="deck__type deck__{i}">
                    <div class="line">
                        <div class="deck__card card first {v[0].name}" data-cid="{v[0].id}" data-name="{v[0].name}" data-type="{v[0].type}"></div>
                        <div class="deck__card card second {v[1].name}" data-cid="{v[1].id}" data-name="{v[1].name}" data-type="{v[1].type}"></div>
                    </div>
                    <div class="deck__card card third {v[2].name}" data-cid="{v[2].id}" data-name="{v[2].name}" data-type="{v[2].type}"></div>
                    <div class="line">
                        <div class="deck__card card four {v[3].name}" data-cid="{v[3].id}" data-name="{v[3].name}" data-type="{v[3].type}"></div>
                        <div class="deck__card card five {v[4].name}" data-cid="{v[4].id}" data-name="{v[4].name}" data-type="{v[4].type}"></div>
                    </div>
               </div>

            </fest:each>
        </div>
        <div class="card-list">
            <div class="card-list__available-cards">
                <div class="card-list__card">
                    <fest:each iterate="obj.cardList" index="i" value="v">
                        <div class="card card__draggable {v.type}" data-cid="{v.id}" data-name="{v.name}" data-type="{v.type}"></div>
                    </fest:each>

                    <!--<div class="card card__draggable dragon"></div>-->
                    <!--<div class="card card__draggable dragon"></div>-->
                    <!--<div class="card card__draggable knight"></div>-->
                    <!--<div class="card card__draggable knight"></div>-->
                    <!--<div class="card card__draggable knight"></div>-->
                    <!--<div class="card card__draggable lady"></div>-->
                    <!--<div class="card card__draggable lady"></div>-->
                    <!--<div class="card card__draggable lady"></div>-->

                </div>
            </div>
        </div>
    </div>

</fest:template>
