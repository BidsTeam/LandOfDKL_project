<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">

    <div class="card-info-popup__card-image card {data.img}_big"></div>
    <div class="card-info-popup__card-name">
        <span style="font-style:italic;">Name:</span> <span style="padding-left:10px;"><fest:value>data.name</fest:value></span>
    </div>
    <div class="card-info-popup__card-attack">
        <span style="font-style:italic;">Attack:</span> <span style="padding-left:5px;"><fest:value>data.attack</fest:value></span>
    </div>
    <div class="card-info-popup__card-type">
        <span style="font-style:italic;">Type:</span> <span style="padding-left:10px;"><fest:value>data.type</fest:value></span>
    </div>
    <div class="card-info-popup__card-effects">
        <fest:each iterate="data.effects" value="v" index="i">
         <span style="font-style:italic;">Эффект:</span> <span style="padding-left:5px;"><fest:value>v.description</fest:value></span>
        </fest:each>
    </div>

</fest:template>
