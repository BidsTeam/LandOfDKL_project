<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">

    <div class="card-container">
        <div class="card-container__card">

            <fest:if test="data.name">
                <div class="card__header">
                    <p>
                        <fest:value>data.name</fest:value>
                    </p>
                </div>
            </fest:if>

            <div class="card__image card__image__{data.cardType}">
            </div>

            <div class="card__card-info-container">
                <fest:value>data.effect</fest:value>
                <fest:value>data.attack</fest:value>
            </div>
        </div>
    </div>

</fest:template>
